{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block title %}
    {{ 
        parent() ~
        ' - ' ~
        'claroline_cursus_tool' | trans({}, 'tools') | striptags | raw ~
        ' - ' ~
        displayedWords['cursus'] ~
        ' - ' ~ 
        'cursus_import'|trans({}, 'cursus')
    }}
{% endblock %}

{% block breadcrumb %}
    {{
        macros.breadcrumbs([
            {
                'icon': 'fa fa-cog',
                'name': 'administration'|trans({}, 'platform'),
                'href': path('claro_admin_index')
            },
            {
                'name': 'claroline_cursus_tool'|trans({}, 'tools'),
                'href': path('claro_cursus_management_tool_menu')
            },
            {
                'name': displayedWords['cursus'],
                'href': path('claro_cursus_tool_index')
            },
            {
                'name': 'cursus_import'|trans({}, 'cursus'),
                'href': ''
            }
        ])
    }}
{% endblock %}

{% block section_content %}
    <div class="panel-heading">
        <h3 class="panel-title">
            {{ 'cursus_import'|trans({}, 'cursus') }}
        </h3>
    </div>
    <form action="{{ path('claro_cursus_import') }}" 
          method="POST"
          {{ form_enctype(form) }}
          novalidate
    >
        <div class="panel-body">
            {{ form_widget(form) }}
        </div>
        <div class="panel-footer">
            <button type="submit" class="btn btn-primary">
                {{ 'ok'|trans({}, 'platform') }}
            </button>
            <a href="{{ path('claro_cursus_tool_index') }}"
               class="btn btn-default" 
               role="button"
            >
                {{ 'cancel'|trans({}, 'platform') }}
            </a>
        </div>
    </form>
{% endblock %}